= form_for @student do |f|
  .form-horizontal
    .fieldset
      .form-group
        .col-lg-6
          .form-group
            = f.label :name, :class => "col-lg-2 control-label"
            .col-lg-10
              = f.text_field :name, :class => "form-control", type: "name"
          .form-group
            = f.label "Email Address", :class => "col-lg-2 control-label"
            .col-lg-10
              = f.text_field :email, :class => "form-control"
          .form-group
            = f.label :password, :class => "col-lg-2 control-label"
            .col-lg-10
              = f.text_field :password, :class => "form-control", type: "password"
          .form-group
            = f.label "Confirm Password", :class => "col-lg-2 control-label"
            .col-lg-10
              = f.text_field :password_confirmation, :class => "form-control", type: "password"
          .actions
            .form-group
              .col-lg-10.col-lg-offset-2
                = f.submit 'Save', :class => "btn btn-primary"
                = link_to 'Cancel', students_path, :class => "btn btn-default"